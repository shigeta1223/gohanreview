<h2 class="mb-4">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "ユーザー名" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード（確認）" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<hr>

<p class="mt-3">
  すでにアカウントをお持ちですか？
  <%= link_to "ログインはこちら", new_session_path(resource_name) %>
</p>
