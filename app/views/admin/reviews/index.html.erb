<h2>レビュー管理</h2>

<table class="table table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>投稿日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= truncate(review.title, length: 30) %></td>
        <td><%= review.user.name %></td>
        <td><%= l(review.created_at, format: :short) %></td>
        <td>
          <%= button_to "削除", admin_review_path(review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
